@{
    ViewBag.Title = "Home Page";
}

<script>
    function check_answers()
    {
        var city1 = $("input:radio[name=city1]:checked").val();
        var city2 = $("input:radio[name=city2]:checked").val();
        var city3 = $("input:radio[name=city3]:checked").val();

        var result = (city1 == "d" ? 1 : 0) + (city2 == "a" ? 1 : 0) + (city3 == "b" ? 1 : 0); 

        alert("You got " + result+" answers correct");
    }
</script>


<div class="jumbotron">
    <h1>Quesitionaire</h1>
    <p class="lead">This is the great question and answer game built by Avinash R</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
